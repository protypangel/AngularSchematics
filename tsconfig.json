{
  "compilerOptions": {
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"],
      "@dist/*": ["dist/*"],
      "@tests/*": ["tests/*"],
      "@Schema-Route/*": ["src/Route/*"]
    },
    "lib": ["es2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
//    "noFallthroughCasesInSwitch": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2020",
    "strict": true,
//    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": true,
    "fileExtensions": {
      "inputGlob": "{js,d.ts,json}",
      "outputCheck": ["js", "d.ts", "js.map", "d.ts.map", "json"]
    }
  },
  "include": [
    "config/*.json",
    "src/**/*",
    "tests/**/*",
    "node_modules/@types/node/module.d.ts",
  ],
  "exclude": ["node_modules", "dist", "tests/route/expect.file.spec"]
}